    "email": "jiangweixian1994@gmail.com",
    "url": "https://twitter.com/jiangweixian"
  },
  "exports": {
    "./package.json": "./package.json",
    ".": {
      "require": "./dist/index.cjs",
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs"
    }
  },
  "main": "dist/index.cjs",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "lint-staged": {
    "**/**/*.{js,ts,tsx,vue,json,yml,yaml}": ["eslint --fix"]
  },
  "dependencies": {
    "functional-md": "^1.1.0"
  },
  "devDependencies": {
    "@aiou/eslint-config": "^0.10.0",
    "@changesets/cli": "^2.26.0",
    "@rollup/plugin-alias": "4.0.3",
    "@rollup/plugin-commonjs": "24.0.1",
    "@rollup/plugin-node-resolve": "15.0.1",
    "@types/node": "17.0.22",
    "cz-emoji": "1.3.1",
    "esbuild": "^0.17.12",
    "eslint": "^8.32.0",
    "esrua": "0.2.1",
    "husky": "^8.0.3",
    "lint-staged": "^13.1.0",
    "npm-run-all": "^4.1.5",
    "rimraf": "3.0.2",
    "rollup": "3.19.1",
    "rollup-plugin-condition-exports": "1.3.1",
    "rollup-plugin-esbuild": "^5.0.0",
    "rollup-plugin-filesize": "9.1.2",
    "rollup-plugin-node-externals": "5.1.2",
    "ts-node": "^10.7.0",
    "tslib": "2.4.0",
    "ttypescript": "1.5.13",
    "typescript": "^4.6.4",
    "typescript-transform-paths": "3.3.1",
    "vitest": "0.10.0"
  },
  "engines": {
    "node": ">=14"
  },
  "scripts": {
    "build:lib": "rollup -c --silent",
    "build:dts": "ttsc",
    "build": "rimraf dist && run-p build:*",
    "dev": "rollup -c -w --silent",
    "test": "vitest",
    "pretest": "pnpm run build",
    "release": "pnpm run build && np --no-cleanup --yolo --no-publish --any-branch",
    "ci:version": "pnpm changeset version",
    "ci:publish": "pnpm run build && pnpm changeset publish",
    "ci:snapshot": "pnpm changeset version --snapshot beta",
    "ci:prerelease": "pnpm run build && pnpm changeset publish --tag beta",
    "lint:fix": "eslint . --fix",
    "prepare": "husky install"
  }
}